# Database configuration
DATABASE_URL=mysql+aiomysql://blog:CHANGE_THIS_PASSWORD@localhost:3306/blog

# 数据库连接池大小
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Server configuration
HOST=0.0.0.0
PORT=8000

ADMIN_PASSWORD=your-secret-key-here
# JWT configuration (required for admin authentication)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-here
JWT_EXPIRE_MINUTES=1440


# SQL 日志输出（true/false，生产环境建议 false）
DB_ECHO=false

# 允许的源，多个源用逗号分隔
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,
